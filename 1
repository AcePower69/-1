using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
 
namespace SredArif
{
    class Program
    {
        static void Main(string[] args)
        {
            int a, b;
            a = int.Parse(Console.ReadLine());
            b = int.Parse(Console.ReadLine());
            Console.WriteLine(Sred(a, b));
            Console.ReadKey();
        }
 
        static int Sred(int a, int b)
        {
            return ((a + b) / 2);
        }
    }
}
